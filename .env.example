# ===========================================
# WALMART SERVICE - ENVIRONMENT CONFIGURATION
# ===========================================

# Application Configuration
NODE_ENV=development
PORT=8082
APP_NAME=WalmartService

# Database Configuration (PostgreSQL)
# -----------------------------------------
# Connection string format for production
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=db_password_here
DB_DATABASE=walmart_local
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Alternative: Full connection URL
# DATABASE_URL=postgresql://postgres:password@localhost:5432/walmart_db

# Walmart API Configuration
# -----------------------------------------
WALMART_API_BASE_URL=https://marketplace.walmartapis.com/v3
WALMART_SERVICE_NAME=Walmart Service Name

# Logging Configuration
# -----------------------------------------
# TCP logging for Logstash integration
LOG_TCP_HOST=10.0.2.39
LOG_TCP_PORT=5045
LOG_LEVEL=info

# Schedule Configuration
# -----------------------------------------
# Enable/disable scheduled order sync (set to 'true' in production)
ENABLE_SCHEDULED_JOBS=false
ORDER_SYNC_INTERVAL_MINUTES=10

# Batch Processing Configuration
# -----------------------------------------
BATCH_SIZE=5
MAX_CONCURRENCY=5
