{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "collectCoverageFrom": [
    "../src/**/*.ts",
    "!../src/main.ts"
  ],
  "coverageDirectory": "./coverage",
  "testTimeout": 30000
}
